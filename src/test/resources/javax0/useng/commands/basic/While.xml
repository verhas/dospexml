<Script xmlns="useng:basic" xmlns:t="test">
    <t:Expected>123</t:Expected>
    <Let name="x">
        <Integer>0</Integer>
    </Let>
    <While>
        <condition>
            <Less>
                <Get name="x"/>
                <Integer>3</Integer>
            </Less>
        </condition>
        <Block>
            <Let name="x">
                <Add>
                    <Integer>1</Integer>
                    <Get name="x"/>
                </Add>
            </Let>
            <Puts trim="true">
                <Get name="x"/>
            </Puts>
        </Block>
    </While>
</Script>