<?xml version="1.0" encoding="UTF-8"?>
<Script xmlns="useng:basic">
    <Block>
        <Set name="x">
            <value>
                <Long>1</Long>
            </value>
        </Set>
        <While>
            <condition>
                <Less>
                    <Get name="x"/>
                    <Integer>10</Integer>
                </Less>
            </condition>
            <Block>
                <Puts trim="true"><![CDATA[here we go ]]><Get name="x"/>.
                </Puts>
                <Set name="x">
                    <value>
                        <Add>
                            <Get name="x"/>
                            <Integer>1</Integer>
                        </Add>
                    </value>
                </Set>
            </Block>
        </While>
        <Puts>this is what we want to see on the output</Puts>
        <If>
            <condition>
                <Boolean>false</Boolean>
            </condition>
            <else>
                <Puts>This is else</Puts>
            </else>
            <then>
                <Puts>This is then</Puts>
            </then>
        </If>
        <Puts>
            this is also printed

            here is x="<Get name="x"/>"
            where is this ... ?
        </Puts>
    </Block>
</Script>